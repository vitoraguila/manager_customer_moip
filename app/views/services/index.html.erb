<div class="row campaigns">
  <h3>Serviços</h3>
  <br>
 
  <table class="responsive-table">
    <thead>
      <tr>
          <th>Nome</th>
          <th>Detalhes</th>
          <th>Preço</th>
          <th>Recorrencia</th>
      </tr>
    </thead>

    <tbody>
      <% @services.each do |c| %>
      <tr>
        <td><%= truncate(c.name, length: 30, omission: '...') %></td>
        <td><%= truncate(c.detail, length: 90, omission: '...')  %></td>
        <td><%= c.price %></td>
        <td><%= c.role_recurrence %></td>
        <td>
          <%= link_to edit_service_path(c.id), class:"waves-effect waves-light btn cyan" do %>
            <i class="large material-icons">update</i>
          <% end %>
        </td>
        <td>
        <%= link_to service_path(c.id), method: :delete, class:"waves-effect waves-light btn red" do %>
            <i class="large material-icons">delete</i>
        <% end %>  
      </tr>

      <% end %>
    </tbody>
  </table>
            



  <div class="fixed-action-btn campaigns-btn">
   <%= link_to new_service_path, class:"btn-floating btn-large red pulse" do %>
    <i class="large material-icons">add</i>
   <% end %>
  </div>
</div>